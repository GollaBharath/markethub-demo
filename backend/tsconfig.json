{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2019",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": false,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"outDir": "dist",
		"moduleResolution": "node",
		"types": ["node"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
